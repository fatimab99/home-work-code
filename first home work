#include<iostream>
using namespace std;
int main()
{
     
    int num1,num2;
  cout«"Enter  the number1 and number 2:";
  cin»num1»num2;
  char opt;
  float res;
  cout«" specify the arithmetic operation your want?"«endl;
  cout«"+) addition,"«endl;
  cout«"-) subtraction,"«endl;
  cout«"*) multiplication,"«endl;
  cout«"/) division,"«endl;
  cin»opt;
  switch(opt){
    case'+':

    res=num1+num2; break;
    case'-':

    res=num2-num1; break;
    case'*':

    res=num1*num2; break;
    case'/':

      if(num1!=0){
        res=num2/num1; 
        cout«num1«opt«num2«" = "« res« endl;
      }
      else
        cout«"\a"«"error can not division by zero try again ! "«endl; break;

    default: res=0;
  }

  cout«num1«opt«num2«" = "« res« endl;
  
  //return 0;
  system("pause");
}
